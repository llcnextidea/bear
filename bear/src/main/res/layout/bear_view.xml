<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bearView"
    android:padding="@dimen/space_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/earLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="@+id/center"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ear" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/earRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:rotation="90"
            app:layout_constraintStart_toStartOf="@+id/center"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ear" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/face"
            app:layout_constraintStart_toStartOf="@+id/face"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_body" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/muzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/face"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_muzzle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="@+id/center"
            app:layout_constraintStart_toStartOf="@+id/center"
            app:layout_constraintTop_toTopOf="@id/face"
            app:srcCompat="@drawable/ic_nose" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/face"
            app:layout_constraintEnd_toEndOf="@+id/center"
            app:layout_constraintStart_toStartOf="@+id/center"
            app:srcCompat="@drawable/ic_mouth_smile" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/eyeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="@+id/face"
            app:layout_constraintTop_toTopOf="@+id/face"
            app:srcCompat="@drawable/ic_eye" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/eyeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="@+id/center"
            app:layout_constraintTop_toTopOf="@id/face"
            app:srcCompat="@drawable/ic_eye" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/handRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-100dp"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_arm" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/handLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="-100dp"
            android:rotationX="180"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_arm" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>